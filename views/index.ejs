<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' href='index.css'>
</head>

<body>
    <div class="content">
        <form action="/save" method="post">
            <input type="text" name="id" placeholder="Nhập mã sản phẩm" />
            <br>
            <input type="text" name="name" placeholder="Nhập tên sản phẩm" />
            <br>
            <input type="text" name="quantity" placeholder="Nhập số lượng" />
            <br>
            <input type="text" name="brand" placeholder="Nhập thương hiệu" />
            <br>
            <button type="submit">Thêm sản phẩm</button>
        </form>
        <form action="/delete" method="post">
            <table>
                <caption>Danh sách sản phẩm</caption>
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Thương hiệu</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(item => { %>
                        <tr>
                            <td>
                                <%= item.id %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.quantity %>
                            </td>
                            <td>
                                <%= item.brand %>
                            </td>
                            <td>
                                <input type="checkbox" name="selectedItem" value="<%= item.id %>" />
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <button type="submit">Xóa sản phẩm đã chọn</button>
        </form>
    </div>
</body>

</html>